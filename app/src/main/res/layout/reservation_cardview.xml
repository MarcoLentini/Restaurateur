<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/textViewOrderIdReservation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorPrimary"
                    android:drawableStart="@drawable/ic_tag"
                    android:drawableLeft="@drawable/ic_tag"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:text="OrderID"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/textViewRemainingTimeReservation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_hourglass"
                    android:drawableLeft="@drawable/ic_hourglass"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:text="15min"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />

                <TextView
                    android:id="@+id/textViewNotesReservation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="notes!"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:visibility="invisible"
                    android:textColor="@color/colorAccent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewFoodReservation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hapticFeedbackEnabled="false"
                    android:maxLines="2"
                    android:text="Pizza margherita(x1) Pizza al prosciutto(x3) Zucchine grigliate(x4) peperoni con carne al forno(x1)"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

                <!--<TextView
                    android:id="@+id/textViewNotesReservation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_note"
                    android:drawableLeft="@drawable/ic_note"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="La pizza la voglio buona"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" /> -->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="right">

                <TextView
                    android:id="@+id/textViewTotalIncomeReservation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_currency_euro"
                    android:drawableLeft="@drawable/ic_currency_euro"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:text="12.50"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textColor="@color/colorAccent"/>
                <Button
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACCEPT"
                    android:theme="@style/PrimaryFlatButton" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REJECT"
                    android:theme="@style/PrimaryFlatButton"/>
            </LinearLayout>
        </LinearLayout>

</android.support.v7.widget.CardView>