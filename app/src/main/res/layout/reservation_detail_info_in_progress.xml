                android:drawableLeft="@drawable/ic_tag"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="@string/str_orderid"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                android:textColor="@color/colorPrimary" />

            <LinearLayout
                android:id="@+id/layout_reservation_pending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewOrderIdInProgress"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="@dimen/dp24"
                android:layout_marginLeft="@dimen/dp24"
                android:layout_marginTop="@dimen/dp16"
                android:layout_marginEnd="@dimen/dp24"
                android:layout_marginRight="@dimen/dp24"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewRemainingTimeInProgress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_hourglass"
                    android:drawableLeft="@drawable/ic_hourglass"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:text="@string/str_time"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />

                <TextView
                    android:id="@+id/textViewTotalIncomeInProgress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_currency_euro"
                    android:drawableLeft="@drawable/ic_currency_euro"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:text="@string/str_income"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2" />
            </LinearLayout>

