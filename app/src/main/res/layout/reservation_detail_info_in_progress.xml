            <ImageView
                android:id="@+id/imageViewPhoneInProgress"
                android:layout_width="@dimen/dp16"
                android:layout_height="@dimen/dp16"
                android:layout_below="@+id/divider3"
                android:layout_marginTop="@dimen/dp16"
                android:layout_marginEnd="@dimen/dp24"
                android:layout_marginRight="@dimen/dp24"
                android:layout_toStartOf="@+id/imageViewMsgInProgress"
                android:layout_toLeftOf="@+id/imageViewMsgInProgress"
                android:src="@drawable/ic_order_call"
                android:contentDescription="@string/str_callcustonmer"/>

            <ImageView
                android:id="@+id/imageViewMsgInProgress"
                android:layout_width="@dimen/dp16"
                android:layout_height="@dimen/dp16"
                android:layout_below="@+id/divider3"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp16"
                android:layout_marginEnd="@dimen/dp24"
                android:layout_marginRight="@dimen/dp24"
                android:src="@drawable/ic_order_msg"
                android:contentDescription="@string/str_messagecustomer"/>

            <TextView
                android:id="@+id/tvPhoneInProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNameInProgress"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="@dimen/dp24"
                android:layout_marginLeft="@dimen/dp24"
                android:layout_marginTop="@dimen/dp8"
                android:layout_marginBottom="@dimen/dp8"
                android:drawableStart="@drawable/ic_order_call"
                android:drawableLeft="@drawable/ic_order_call"
                android:text="@string/str_phonenumber" />

            <View
                android:id="@+id/divider4"
                android:layout_width="395dp"
                android:layout_height="2dp"
                android:layout_below="@+id/tvPhoneInProgress"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="@dimen/dp8"
                android:layout_marginLeft="@dimen/dp8"
                android:layout_marginTop="@dimen/dp8"
                android:layout_marginEnd="@dimen/dp8"
