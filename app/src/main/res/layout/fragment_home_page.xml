    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dp16"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginRight="@dimen/dp16"
        android:layout_marginEnd="@dimen/dp16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llHomePageBusiness">

        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="true">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="100dp">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/btnHistoryOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp16"
                    android:src="@drawable/ic_history" />
                <TextView
                    android:id="@+id/tvHistoryOrders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp4"
                    android:text="@string/title_history_order"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="100dp">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/btnComments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    android:padding="@dimen/dp16"
                    android:src="@drawable/ic_comments"/>

                <TextView
                    android:id="@+id/tvComments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp4"
                    android:gravity="center"
                    android:padding="@dimen/dp4"
                    android:text="@string/title_comments"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="100dp">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/btnAnalysis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorError"
                    android:padding="@dimen/dp16"
                    android:src="@drawable/ic_analysis" />

                <TextView
                    android:id="@+id/tvAnalysis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp4"
                    android:text="@string/title_analysis"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="100dp">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/btnTopDishes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorRed"
                    android:padding="@dimen/dp16"
                    android:src="@drawable/ic_star" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp4"
                    android:text="@string/title_top_sold_dishes"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="100dp">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/btnRestaurantInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimaryDarkLogin"
                    android:padding="@dimen/dp16"
                    android:src="@drawable/ic_restaurant" />

                <TextView
                    android:id="@+id/tvRestaurantInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp4"
                    android:text="@string/RestInfoTitle"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="12sp" />


            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="100dp">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/btnMyAccountInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/design_default_color_primary_dark"
                    android:padding="@dimen/dp16"
                    android:src="@drawable/ic_account_name" />

                <TextView
                    android:id="@+id/tvMyAccountInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp4"
                    android:text="@string/title_account_info"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>