<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#FFFFFF"
    android:id="@+id/menu_item_cardView">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <ImageView
               android:id="@+id/imageViewOffer"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:scaleType="centerCrop"
               android:src="@drawable/ic_launcher_background" />

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:padding="16dp">

               <TextView
                   android:id="@+id/textViewTitleOffer"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="8dp"
                   android:text="Card title"
                   android:textColor="#000"
                   android:textSize="18sp" />

               <TextView
                   android:id="@+id/textViewContentOffer"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Card content"
                   android:textColor="#555" />
           </LinearLayout>

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:paddingLeft="16dp"
           android:paddingRight="16dp">
           <TextView
               android:id="@+id/textViewPriceOffer"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="Prezzo"
               android:textColor="#000"
               android:textSize="18sp" />
           <TextView
               android:id="@+id/textViewPriceOfferValue"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="5€"
               android:textColor="#000"
               android:textSize="18sp" />
           <TextView
               android:id="@+id/textViewQuantityOffer"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="Quantità"
               android:textColor="#000"
               android:textSize="18sp" />
           <TextView
               android:id="@+id/textViewQuantityOfferValue"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="29"
               android:textColor="#000"
               android:textSize="18sp" />
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           >
           <Button
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:padding="5dp"
               android:text="Edit"
               android:background="?attr/selectableItemBackground"
               android:theme="@style/PrimaryFlatButton" />

           <Button
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:background="?attr/selectableItemBackground"
               android:padding="5dp"
               android:text="Disable"
               android:textColor="#000"
               android:theme="@style/PrimaryFlatButton" />
       </LinearLayout>
   </LinearLayout>
</android.support.v7.widget.CardView>
