<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true"
    tools:context="com.example.restaurateur.Information.SignupActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

        <RelativeLayout
            android:id="@+id/linearLayoutOffer"
            android:layout_width="@dimen/toolbar_profile_width"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/restaurant_image"
                android:layout_width="@dimen/toolbar_profile_width"
                android:layout_height="@dimen/toolbar_profile_width"
                android:layout_marginTop="@dimen/activity_padding"
                android:layout_marginBottom="@dimen/activity_padding"
                android:scaleType="centerInside"
                android:src="@drawable/img_rest_1"
                app:civ_border_color="@color/colorPrimaryText"
                app:civ_border_width="2sp" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/background_img_rest"
                android:layout_width="48sp"
                android:layout_height="48sp"
                android:layout_alignBottom="@id/restaurant_image"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:scaleType="centerInside"
                android:src="@drawable/background"
                app:civ_border_color="@android:color/white"
                app:civ_border_width="2sp"
                app:civ_shadow="true"
                app:civ_shadow_radius="1" />

            <ImageView
                android:id="@+id/img_plus_rest"
                android:layout_width="43sp"
                android:layout_height="44sp"
                android:layout_alignStart="@+id/background_img_rest"
                android:layout_alignLeft="@+id/background_img_rest"
                android:layout_alignTop="@+id/background_img_rest"
                android:layout_alignEnd="@+id/background_img_rest"
                android:layout_alignRight="@+id/background_img_rest"
                android:layout_alignBottom="@+id/background_img_rest"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/app_name"
                android:cropToPadding="false"
                android:src="@drawable/ic_camera"
                android:tint="@android:color/white" />
        </RelativeLayout>



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/restaurant_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/restaurant_name"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@android:color/white" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/restaurant_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/restaurant_address"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@android:color/white" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/restaurant_descr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:focusable="true"
                android:gravity="start|top"
                android:hint="@string/restaurant_descr"
                android:textColor="@android:color/white"
                android:imeOptions="actionDone"/>

            <!--android:imeActionId="@+id/login"-->

            <!--<EditText-->
                <!--android:id="@+id/restaurant_descr"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:focusableInTouchMode="true"-->
                <!--android:hint="@string/restaurant_descr"-->
                <!--android:imeActionId="@+id/login"-->
                <!--android:imeOptions="actionUnspecified"-->
                <!--android:inputType="textPassword"-->
                <!--android:maxLines="1"-->
                <!--android:singleLine="true"-->
                <!--android:textColor="@android:color/white" />-->

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/textViewRestaurantType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@color/colorPrimaryDark"
            android:paddingStart="4dp"
            android:paddingLeft="4dp"
            android:hint="Select restaurant tag"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:drawableStart="@android:drawable/checkbox_off_background"
            android:drawableLeft="@android:drawable/checkbox_off_background"
            android:drawableEnd="@drawable/ic_account_edit"
            android:drawableRight="@drawable/ic_account_edit" />

        <Button
            android:id="@+id/complete_rest_btn"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/bg_main"
            android:text="@string/complete_rest_btn"
            android:textColor="@color/btn_login_bg"
            android:textStyle="bold" />

        <!-- Link to Login Screen -->
        <ProgressBar
            android:id="@+id/progressBarRest"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="20dp"
            android:visibility="gone" />
    </LinearLayout>


    </ScrollView>
</android.support.design.widget.CoordinatorLayout>

