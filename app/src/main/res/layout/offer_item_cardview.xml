<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/offer_item_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/linearLayoutOffer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp16">

        <ImageView
            android:id="@+id/offer_food_pic"
            android:layout_width="@dimen/dp96"
            android:layout_height="@dimen/dp96"
            android:contentDescription="@string/FoodPic"
            android:src="@drawable/img_rest_1" />

        <LinearLayout
            android:id="@+id/linearLayoutOfferData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginStart="@dimen/dp16">

            <TextView
                android:id="@+id/offer_food_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/FoodName"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="2"/>

            <LinearLayout
                android:id="@+id/linearLayoutOfferQuantityPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp4">

                <TextView
                    android:id="@+id/textViewQuantityOffer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/FoodQuantity"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

                <TextView
                    android:id="@+id/textViewQuantityOfferValue"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/FoodQuantityValue"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_marginLeft="@dimen/dp8"
                    android:layout_marginStart="@dimen/dp8"/>

                <TextView
                    android:id="@+id/textViewPriceOffer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/FoodPrice"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

                <TextView
                    android:id="@+id/textViewPriceOfferValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_currency_euro"
                    android:drawableLeft="@drawable/ic_currency_euro"
                    android:text="@string/FoodPriceValue"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:layout_marginLeft="@dimen/dp8"
                    android:layout_marginStart="@dimen/dp8"/>
            </LinearLayout>

            <Switch
                android:id="@+id/offerStateSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp16"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>