<?xml version="1.0" encoding="utf-8"?>

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/textViewUserAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="?attr/selectableItemBackground"
            android:drawableStart="@drawable/ic_account_address"
            android:drawableLeft="@drawable/ic_account_address"
            android:drawableEnd="@drawable/ic_account_edit"
            android:drawableRight="@drawable/ic_account_edit"
            android:drawablePadding="12dp"
            android:maxEms="20"
            android:maxLines="1"
            android:text="@string/default_user_address"
            android:textAppearance="@android:style/TextAppearance.Large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewOpeningHours"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="?attr/selectableItemBackground"
            android:drawableStart="@drawable/ic_account_opening_hours"
            android:drawableLeft="@drawable/ic_account_opening_hours"
            android:drawableEnd="@drawable/ic_account_edit"
            android:drawableRight="@drawable/ic_account_edit"
            android:drawablePadding="12dp"
            android:maxEms="20"
            android:maxLines="1"
            android:text="@string/default_opening_hours"
            android:textAppearance="@android:style/TextAppearance.Large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewUserAddress" />

        <TextView
            android:id="@+id/textViewDeliveryService"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="?attr/selectableItemBackground"
            android:drawableStart="@drawable/ic_account_delivery_service"
            android:drawableLeft="@drawable/ic_account_delivery_service"
            android:drawableEnd="@drawable/ic_account_edit"
            android:drawableRight="@drawable/ic_account_edit"
            android:drawablePadding="12dp"
            android:maxEms="20"
            android:maxLines="1"
            android:text="@string/default_delivery_service"
            android:textAppearance="@android:style/TextAppearance.Large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewOpeningHours" />

        <TextView
            android:id="@+id/textViewNotification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="?attr/selectableItemBackground"
            android:drawableStart="@drawable/ic_account_notification"
            android:drawableLeft="@drawable/ic_account_notification"
            android:drawableEnd="@drawable/ic_account_edit"
            android:drawableRight="@drawable/ic_account_edit"
            android:drawablePadding="12dp"
            android:maxEms="20"
            android:maxLines="1"
            android:text="@string/default_user_notification"
            android:textAppearance="@android:style/TextAppearance.Large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewDeliveryService" />
        <TextView
            android:id="@+id/textViewChangePassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="?attr/selectableItemBackground"
            android:drawableStart="@drawable/ic_account_password"
            android:drawableLeft="@drawable/ic_account_password"

            android:drawablePadding="12dp"
            android:maxEms="20"
            android:maxLines="1"
            android:text="@string/password_title"
            android:textAppearance="@android:style/TextAppearance.Large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewNotification" />
    </android.support.constraint.ConstraintLayout>
    </ScrollView>

