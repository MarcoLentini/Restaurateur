<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/offer_item_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#FFFFFF"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ImageViewFoodPic"
            android:layout_width="@dimen/dp156"
            android:layout_height="@dimen/dp156"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dp16"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginTop="@dimen/dp16"
            android:src="@drawable/img_rest_1" />


        <EditText
            android:id="@+id/editTextFoodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="@dimen/dp16"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginTop="@dimen/dp24"
            android:layout_marginEnd="@dimen/dp16"
            android:layout_marginRight="@dimen/dp16"
            android:layout_toEndOf="@+id/ImageViewFoodPic"
            android:layout_toRightOf="@+id/ImageViewFoodPic"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="this is  a long long long long long long long long food name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24sp"
            app:fontFamily="sans-serif-black" />


        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ImageViewFoodPic"
            android:layout_marginStart="@dimen/dp24"
            android:layout_marginLeft="@dimen/dp24"
            android:layout_marginTop="@dimen/dp16"
            android:layout_marginEnd="@dimen/dp16"
            android:layout_marginRight="@dimen/dp16"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewQuantityOffer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="QuantitÃ "
                android:textColor="#000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextQuantityOfferValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:text="29"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewPriceOffer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Prezzo"
                android:textColor="#000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextPriceOfferValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_currency_euro"
                android:drawableLeft="@drawable/ic_currency_euro"
                android:ems="10"
                android:inputType="number"
                android:text="5"
                android:textColor="@color/colorRed"
                android:textSize="18sp" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/Button_Area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LinearLayout1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="@dimen/dp8"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_marginTop="@dimen/dp8"
            android:layout_marginEnd="@dimen/dp8"
            android:layout_marginRight="@dimen/dp8"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/etOfferBtnCancel"
                style="@style/Button"
                android:layout_margin="@dimen/dp8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cancel_button"
                android:textColor="@color/colorPrimaryText" />
            <Button
                android:id="@+id/etOfferBtnSave"
                android:layout_margin="@dimen/dp8"
                style="@style/Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/Button_Save"
                android:textColor="@color/colorPrimaryText" />
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>