<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#FFFFFF"
    android:id="@+id/edit_offer_item_cardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/offer_food_pic"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/activity_padding"
            android:layout_marginBottom="@dimen/activity_padding"
            android:scaleType="centerInside"
            android:src="@drawable/ic_home"
            app:civ_border_color="@color/colorPrimaryText"
            app:civ_border_width="2sp" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewFoodName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Food Name"
                android:textColor="#000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextFoodOfferName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="10"
                android:inputType="text"
                android:text="pizza"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="24sp"
                app:fontFamily="sans-serif-black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewQuantityOffer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="QuantitÃ "
                android:textColor="#000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextQuantityOfferValue"
                 android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="29"
                android:textColor="#000"
                android:textSize="18sp"
                android:ems="10"
                android:inputType="number" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewPriceOffer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Prezzo"
                android:textColor="#000"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/editTextPriceOfferValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:drawableStart="@drawable/ic_order_euro"
                android:drawableLeft="@drawable/ic_order_euro"
                android:text="5"
                android:textColor="@color/colorRed"
                android:textSize="18sp"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Button_Area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/Cancel_Offer"
                style="@style/ButtonReject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CANCEL"
                android:textColor="@color/colorPrimaryText" />

            <Button
                android:id="@+id/Save_Offer"
                style="@style/Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/Button_Save"
                android:textColor="@color/colorPrimaryText" />
        </LinearLayout>
    </LinearLayout>
 </android.support.v7.widget.CardView>